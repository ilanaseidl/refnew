<!DOCTYPE html>
<html lang="en">
<body>
  <div class="row">
    <div class="col-xs-6 col-sm-3">
      Column 1
      <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Counter</th>
        <th scope="col">Referred By</th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td><%= user.counter %></td>
        <td><%=
            if @referral.find_by(referred: user.id) == nil
              "none"
            else
              @referrerId = @referral.find_by(referred: user.id).referrer
              User.find(@referrerId).email
            end
        %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</body>
</html>


<div class="row">
  <div class="col-xs-6 col-sm-3">
