<table class="table table-striped table-hover">
        <thead>
        <th>Email</th>
        <th>Counter</th>
        <th>User Id</th>
        <th>Referred By</th>
        </thead>
      <tbody>
        <% @user.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.counter %></td>
            <td><%= user.id %></td>
            <td><%=
                if @referral.find_by(referred: user.id) == nil
                  "none"
                else
                  @referrerId = @referral.find_by(referred: user.id).referrer
                  User.find(@referrerId).email
                end
            %></td>
          </tr>
        <% end %>
      </table>
